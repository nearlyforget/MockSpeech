<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gamecodeschool.mockspeech.SettingsActivity"
    android:background="@drawable/shelf1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="368dp"
        android:layout_height="61dp"
        android:background="@drawable/header"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layoutDirection="ltr"
        android:weightSum="1"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="57dp"
            android:layout_height="51dp"
            android:clickable="true"
            app:srcCompat="@drawable/button_back" />

        <TextView
            android:id="@+id/textSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="All Speech"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            tools:text="Settings" />

    </android.support.v7.widget.Toolbar>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/switch3"
        android:layout_marginRight="86dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="106dp" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/switch2"
        android:layout_marginRight="86dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/textBig"
        android:layout_width="41dp"
        android:layout_height="46dp"
        android:text="大"
        app:layout_constraintTop_toBottomOf="@+id/switch3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="103dp"
        android:layout_marginRight="127dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />
    <Button
        android:id="@+id/textMid"
        android:layout_width="41dp"
        android:layout_height="46dp"
        android:text="中"
        android:layout_marginBottom="239dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textBig"
        android:layout_marginLeft="0dp" />
    <Button
        android:id="@+id/textSmall"
        android:layout_width="41dp"
        android:layout_height="46dp"
        android:text="小"
        android:layout_marginRight="45dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="239dp" />


</android.support.constraint.ConstraintLayout>
