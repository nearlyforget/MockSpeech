<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gamecodeschool.mockspeech.SpeechFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/speech_control"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="end"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight=".3">

            <TextView
                android:id="@+id/text_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_playbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_play_circle_filled_black_24dp"
                android:contentDescription="play" />

            <ImageView
                android:id="@+id/image_pausebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_pause_circle_filled_black_24dp"
                android:contentDescription="pause" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/speech_scroll"
        android:layout_width="match_parent"
        android:layout_height="504dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:id="@+id/speech_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
